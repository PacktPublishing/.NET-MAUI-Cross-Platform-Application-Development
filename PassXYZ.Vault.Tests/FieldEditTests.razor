@using KPCLib
@using PassXYZ.Vault.Tests
@inherits TestContext

<h3>FieldEditTests</h3>

@code {
    private RenderFragment _editorDialog => __builder =>
    {
    <CascadingValue Value="@_dialogId" Name="Id">
        <EditorDialog IsKeyEditingEnable=@IsNewField Key=@TestField.Key Value=@TestField.Value
                  OnSave=@OnSaveClicked>
            @if (IsNewField) {
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" @bind="TestField.IsProtected" id="flexCheckDefault">
                <label class="form-check-label" for="flexCheckDefault">
                    Password
                </label>
            </div>
        }
        </EditorDialog>
     </CascadingValue>        
    };
}
