@page "/entry/{SelectedItemId}"

@using System.Collections.ObjectModel
@using KPCLib
@using KeePassLib
@using PassXYZ.Vault.Shared
@using PassXYZ.Vault.Services

@namespace PassXYZ.Vault.Pages

<!-- Back button and title -->
<div class="container">
    <div class="row">
        <div class="col-12">
            <h1>
                @if (selectedItem!.GetParentLink() != null)
                {
                    <a class="btn btn-outline-dark" href="@selectedItem!.GetParentLink()"><span class="oi oi-chevron-left" aria-hidden="true"></span></a>
                }
                @(" " + selectedItem!.Name)
                <button type="button" class="btn btn-outline-dark float-end"
                        data-bs-toggle="modal" data-bs-target="#editModel" 
                        @onclick="@(() => IsKeyEditingEnable=true)">
                    <span class="oi oi-plus" aria-hidden="true"></span></button>
            </h1>
        </div>
    </div>
</div>

<!-- List view with context menu -->
<div class="list-group">
    @foreach (var field in fields)
    {
        @if(field.ShowContextAction == null)
        {
            <div class="dropdown list-group-item list-group-item-action d-flex gap-1 py-2" aria-current="true">
                <span class="oi oi-pencil" aria-hidden="true"></span>
                <div class="d-flex gap-2 w-100 justify-content-between">
                    <div>
                        <h6 class="mb-0">@field.Key</h6>
                        <p class="mb-0">@field.Value</p>
                    </div>
                </div>
                <button class="opacity-50 btn btn-light dropdown-toggle" type="button"
                id="itemDetailContextMenu" data-bs-toggle="dropdown" aria-expanded="false"
                @onclick="@(() => listGroupField=field)">
                    <span class="oi oi-menu" aria-hidden="true"></span>
                </button>
                <ul class="dropdown-menu" aria-labelledby="itemDetailContextMenu">
                    <li><button class="dropdown-item" data-bs-toggle="modal" data-bs-target="#editModel"
                        @onclick="@(() => IsKeyEditingEnable=false)">
                            Edit
                        </button></li>
                    <li><button class="dropdown-item" data-bs-toggle="modal" data-bs-target="#deleteModel">
                            Delete
                        </button></li>
                    @if (field.IsProtected) {
                        <li><button class="dropdown-item" @onclick="OnToggleShowPassword">
                                @if (field.IsHide) { <span>Show</span> }
                                else { <span>Hide</span> }
                         </button></li>
                    }
                </ul>
            </div>
        }
    }
</div>
<div class="container"><article>@((MarkupString)notes)</article></div>

<!-- Editing Modal -->
<div class="modal fade" id="editModel" tabindex="-1" aria-labelledby="editModelLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="editModelLabel">Edit</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form class="row gx-2 gy-3">
                    @if (IsKeyEditingEnable)
                    {
                        <div>
                            <label for="keyField">Key</label>
                            <input type="text" class="form-control" id="keyField" 
                                @bind="newKey" required>
                        </div>
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" @bind="IsPassword" id="flexCheckDefault">
                            <label class="form-check-label" for="flexCheckDefault">
                                Password
                            </label>
                        </div>
                    }
                    <div>
                        @if (IsKeyEditingEnable)
                        {
                            <label for="valueField">Value</label>
                        }
                        else 
                        {
                            <label for="valueField">@listGroupFieldKey</label>
                        }
                        <textarea class="form-control" id="valueField" style="height: 100px"
                                  value=@listGroupFieldValue @onchange="OnValueChanged" required/>
                    </div>
                    <div class="col-12">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                        <button type="submit" class="btn btn-primary"
                                @onclick="UpdateFieldAsync">
                            Save changes
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<!-- Deleting Modal -->
<div class="modal fade" id="deleteModel" tabindex="-1" aria-labelledby="deleteModelLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="deleteModelLabel">Please confirm</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                Do you want to delete @listGroupFieldKey?
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-primary" data-bs-dismiss="modal"
                        @onclick="DeleteFieldAsync">
                    Confirm
                </button>
            </div>
        </div>
    </div>
</div>
